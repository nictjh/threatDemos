<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#1a1a1a">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlashLight Pro"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="60dp"/>

    <!-- Flashlight Toggle Button -->
    <Button
        android:id="@+id/btnFlashlight"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="ðŸ”¦\nTAP TO TURN ON"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/flashlight_button"
        android:layout_marginBottom="60dp"/>

    <!-- App Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instant bright flashlight\nTap the button to toggle"
        android:textSize="16sp"
        android:textColor="#cccccc"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"/>

    <!-- Version Info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.2.3 - Pro Edition"
        android:textSize="12sp"
        android:textColor="#666666"/>

</LinearLayout>
